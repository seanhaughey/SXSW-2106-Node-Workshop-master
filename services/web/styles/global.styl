html
  background #fff
  font-family verdana, sans-serif
  font-size 16px

body
  background #fff
  width 600px
  margin 10px auto
  border 1px solid #eee
  border-radius 2px
  box-shadow 0px 0px 35px -15px #555
  position relative

h1
  font-size 150%
  padding 0
  margin 0

ul, li
  list-style none

#header
  background #333
  position relative

  h1 a
    color #fff
    text-decoration none

#auth
  position absolute
  top 10px
  right 15px

  input
    display inline-block
    margin-left 5px
    padding 5px
    width 8em
    border-radius 3px

    &[type="submit"]
      background #777
      color #eee
      width auto
      text-align center
      border 1px solid #eee
      cursor pointer

#header, #content
  padding 10px 15px

message_background_color = #D42604
#messages
  background message_background_color
  color #fff
  ul, li
    margin 0
    padding 0
  li
    padding 10px 5px
    border-bottom 1px solid darken(message_background_color, 10)

#footer
  position absolute
  top 100%
  text-align center
  left 0
  right 0
  font-size 80%

  a
    color #888
    text-decoration none
    &:hover
      color green

  ul
    display inline-block
    vertical-align top
    text-align left
